@model ToDoList.Dto.UserCreateDto

<style>
    .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>


<div class="login-form">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation"
             asp-validation-summary="ModelOnly"></div>
        <h2 class="text-center">Реєстрація</h2>
        <div class="form-group">
            <input class="form-control" type="text" asp-for="FirstName" placeholder="Ім'я" required="required" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" asp-for="LastName" placeholder="Прізвище" required="required" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" asp-for="Email" placeholder="Email" required="required" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="Password" placeholder="Пароль" required="required" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit" value="Зареєструватися" />
        </div>
    </form>
</div>